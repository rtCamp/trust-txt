<?xml version="1.0"?>
<ruleset name="">
	<description>Generally-applicable sniffs for WordPress plugins</description>

	<rule ref="WordPress-Core">
		<exclude name="WordPress.Files.FileName.NotHyphenatedLowercase" />
		<exclude name="WordPress.Files.FileName.InvalidClassFileName" />
	</rule>

	<rule ref="WordPress-Docs" />
	<rule ref="WordPress-VIP-Go" />

	<rule ref="PHPCompatibility">
		<exclude name="Generic.Arrays.DisallowShortArraySyntax.Found"/>
	</rule>
	<rule ref="PHPCompatibility"/>
	<config name="testVersion" value="8.1-"/>

	<arg name="extensions" value="php"/>
	<arg value="s"/>

	<exclude-pattern>assets/build/js/*.asset.php</exclude-pattern>
	<exclude-pattern>assets/build/js/*.chunks.php</exclude-pattern>
	<exclude-pattern>*/dev-lib/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>.github/</exclude-pattern>
	<exclude-pattern>plugins/wpai-acf-add-on/</exclude-pattern>
	<exclude-pattern>plugins/advanced-custom-fields-pro/</exclude-pattern>
	<exclude-pattern>plugins/wp-all-import-pro/</exclude-pattern>
</ruleset>
