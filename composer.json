{
    "name": "rtcamp/trust-txt",
    "description": "Create, manage, and validate your trust.txt from within WordPress, just like any other content asset.",
    "homepage": "https://github.com/rtCamp/trust-txt/",
    "type": "wordpress-plugin",
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "wp-coding-standards/wpcs": "^3.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.2.0"
    },
    "license": "GPLv2 or later",
    "scripts": {
        "lint": "vendor/bin/phpcs --standard=WordPress *.php inc/*.php",
        "lint-fix": "vendor/bin/phpcbf --standard=WordPress *.php inc/*.php"
    }
}
